{
  "name": "@hatchbox-ai/hatchbox-cli",
  "version": "0.1.3",
  "description": "AI-assisted workspace management CLI tool enabling developers to work on multiple issues simultaneously with Claude AI using isolated Git worktrees and databases",
  "keywords": [
    "ai",
    "claude",
    "workspace-management",
    "git-worktree",
    "developer-productivity",
    "parallel-development",
    "ci-cd",
    "automation"
  ],
  "homepage": "https://github.com/hatchbox-ai/hatchbox-cli#readme",
  "bugs": {
    "url": "https://github.com/hatchbox-ai/hatchbox-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hatchbox-ai/hatchbox-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "Adam Creeger",
    "email": "adam@acreeger.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hatchbox": "./dist/cli.js",
    "hb": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.16.1+sha512.0e155aa2629db8672b49e8475da6226aa4bdea85fdcdfdc15350874946d4f3c91faaf64cbdc4a5d1ab8002f473d5c3fcedcd197989cf0390f9badd3c04678706",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate:commit": "pnpm run typecheck && pnpm run lint && pnpm run test",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv-flow": "^4.1.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "jsonc-parser": "^3.3.1",
    "omelette": "^0.4.17",
    "ora": "^7.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@fast-check/vitest": "^0.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.1",
    "fast-check": "^3.13.2",
    "husky": "^9.1.7",
    "memfs": "^4.49.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.2.2",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
